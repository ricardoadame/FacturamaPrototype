//Modal Observations:
#modal-observations.modal.fade(tabindex="-1", role="dialog", aria-labelledby="modal-label", aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h6#modal-label.modal-title Agregar Observaciones
        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      .modal-body
        .form-group
          textarea.form-control(placeholder="Agrega las Observaciones aqu√≠")
      .modal-footer
        button.btn.btn-secondary(data-dismiss="modal") Cancelar
        button.btn.btn-info Guardar observaciones
